{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "openEuler Copilot System Desktop",
    "version": "0.9.1-alpha"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://*",
          "https://eulercopilot.gitee.com/*"
        ]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true
      },
      "fs": {
        "exists": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$HOME/.config/eulercopilot/*",
          "$HOME/.eulercopilot/scripts/*"
        ]
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "os": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "identifier": "org.openEuler.Copilot.Desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "openEuler",
      "copyright": "Copyright (c) Huawei Technologies Co., Ltd. 2024-2024. All rights reserved.",
      "category": "Productivity",
      "shortDescription": "openEuler Copilot System Desktop Client",
      "longDescription": "openEuler Copilot System Desktop Client"
    },
    "macOSPrivateApi": true
  }
}