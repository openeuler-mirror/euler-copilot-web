{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "dolphin-mcp-cli",
            "cmd": "dolphin-mcp-cli",
            "args": true
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "identifier": "org.openEuler.Copilot.Desktop",
      "targets": [
        "nsis"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": true
        },
        "nsis": {
          "displayLanguageSelector": true,
          "installerIcon": "icons/icon.ico",
          "languages": [
            "SimpChinese"
          ],
          "license": "../LICENSE",
          "installMode": "perMachine",
          "template": "./template/installer.nsi"
        }
      }
    }
  }
}