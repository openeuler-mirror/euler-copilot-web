{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "EulerCopilot Desktop"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "dolphin-mcp-cli",
            "cmd": "dolphin-mcp-cli",
            "args": true
          },
          {
            "name": "osascript",
            "cmd": "osascript",
            "args": true
          },
          {
            "name": "sh",
            "cmd": "/bin/sh",
            "args": true
          },
          {
            "name": "bash",
            "cmd": "/bin/bash",
            "args": true
          },
          {
            "name": "zsh",
            "cmd": "/bin/zsh",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "identifier": "org.openEuler.EulerCopilot.Desktop",
      "targets": [
        "dmg"
      ],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "14.4",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        },
        "windowPosition": {
          "x": 200,
          "y": 180
        }
      }
    }
  }
}